{
  "manifest_version": 3,
  "name": "Anti-Mercenario",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "/icons/mercenario.png",
    "48": "/icons/mercenario.png",
    "128": "/icons/mercenario.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "/icons/mercenario.png",
      "48": "/icons/mercenario.png",
      "128": "/icons/mercenario.png"
    },
    "default_title": "Anti mercen√°rio"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
